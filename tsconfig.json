{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "lib": ["es2017", "DOM"],
      "strict": true,
      "esModuleInterop": false,
      "outDir": "dist/esm",
      "rootDir": "./",
      "jsx": "react-jsx",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "declarationDir": "dist/esm",
      "emitDeclarationOnly": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"]
  }
  